rm bin/ar71xx/openwrt-ar71xx-generic-gl-ar150-jffs2-64k-sysupgrade.bin
# deleting packages and feed dirs below makes the packages get unticked in menuconfig
#rm -fr package/feeds/serval feeds/serval
cp feeds.local feeds.conf
( cd feeds/serval ; git reset --hard)
scripts/feeds update serval
scripts/feeds install -a serval
scripts/feeds install -p serval
git checkout .config

# Replace http://github.com references in package makefiles with git@localhost:
echo "Patching package makefiles to point to git@localhost: ..."
for file in `find feeds/serval -name Makefile -exec grep -l https://github.com/ "{}" ";"`
do
  echo "   $file"
  cat $file | sed -e 's,https://github.com/,git@localhost:,g' > /tmp/patched.Makefile
  mv /tmp/patched.Makefile $file
done


#make V=99 world
cp bin/ar71xx/openwrt-ar71xx-generic-gl-ar150-jffs2-64k-sysupgrade.bin /srv/tftp/openwrt-domino.bin
( cd ~/Projects/mesh-extender/openwrt-packages/auto-flash ; vlc alert.m3u )

# go back to remote mode
cp feeds.remote feeds.conf
